{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./tests",
  },
  "include": [
    "typings",
    "tests", 
    "scripts",
  ],
}
